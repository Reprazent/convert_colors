begin
	require 'jeweler'
	Jeweler::Tasks.new do |gem|
		gem.name = "convert_colors"
		gem.summary = %Q{Convert colors between different formats}
		gem.description = %Q{Convert colors from strings to their values}
		gem.email = ""
		# gem.homepage = "http://github.com/jomz/gorilla-capistrano-recipes"
		gem.authors = ["Bob Van Landuyt"]
		gem.files = [
			"README",
			"Rakefile",
			"VERSION",
			"convert_colors.gemspec",
			"init.rb",
			"lib/**/*.rb"
		]
	end
	Jeweler::GemcutterTasks.new
rescue LoadError
	puts "Jeweler (or a dependency) not available. Install it with: gem install jeweler openminds_jeweler"
end